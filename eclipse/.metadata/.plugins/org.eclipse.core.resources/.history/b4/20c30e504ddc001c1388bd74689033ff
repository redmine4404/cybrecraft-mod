package fr.redmine.redmod.blocks.TileEntity;

import cpw.mods.fml.common.registry.GameRegistry.ObjectHolder;
import net.minecraft.entity.player.EntityPlayer;
import net.minecraft.init.Blocks;
import net.minecraft.item.Item;
import net.minecraft.item.ItemStack;
import net.minecraft.nbt.NBTTagCompound;
import net.minecraft.tileentity.TileEntity;
import net.minecraft.world.World;

public class SmelterBlockTileEntity extends TileEntity{
	
	ItemStack item1;
	ItemStack item2;
	Item item;
	
	@Override
    public void readFromNBT(NBTTagCompound compound)
    {
		item1 = new ItemStack(item.getItemById(compound.getInteger("Item1")));
		item2 = new ItemStack(item.getItemById(compound.getInteger("Item2")));
        super.readFromNBT(compound);
    }
 
    @Override
    public void writeToNBT(NBTTagCompound compound)
    {
    	if(item1 != null) {
        compound.setInteger("Item1", item1.getItem().getIdFromItem(item1.getItem()) + 1);
    	}
    	if(item2 != null) {
        compound.setInteger("Item2", item2.getItem().getIdFromItem(item2.getItem()) + 1);
    	}
    	super.writeToNBT(compound);
    }
    
    public void setItem1(Item item) {
    	
    }
    
    public void setItem2(Item item) {
    	
    }
    
    public Item getItemStack1() {
    	if(item1 != null) {
    	return item1.getItem();
    	} else return null;
    }
    
    public Item getItemStack2() {
    	if(item2 != null) {
    	return item2.getItem();
    	} else return null;
    }
    
    @Override
    public void updateEntity() {
    	System.out.println(item1);
    	if(item != null) {
    		this.worldObj.setBlock(this.xCoord, this.yCoord + 1, this.zCoord, Blocks.gravel);
    	}
    }
    
}